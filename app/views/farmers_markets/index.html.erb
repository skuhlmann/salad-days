<div id="sub-line" class="column-group">
  <div class="all-75">
    <h2>Search Results</h2>
  </div>
  <div class="all-25 zip">
    <% if successful_search? %>
      <h5>Results for <%= params[:zip] %></h5>
    <% else %>
      <div id="page-form" class="ink-form">
        <div class="control-group">
          <div class="control">
            <%= render partial: "partials/search_form" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

  <% if empty_search? %>
    <h5>No results found for the zipcode: <%= params[:zip] %>. Please try another zip code.
    <% end %>

<% @markets.each do |market| %>
  <div class="column-group">
    <div id="listing" class="farmers">
      <div class="all-30">
        <div id="farmers-details">
          <h3><%= market.marketname %></h3>
          <p class="medium-content"><%= market.Address %></p>
          <p class="small-content"><%= market.Schedule %></p>
          <p class="small-content">Checkout the market page for more details.</p>
          <p><%= link_to "View Market Details", root_path, class: "listing-btn" %></p>
        </div>
      </div>
      <div class="all-70 align-right">
        <div id="farmers-map">
          <iframe id="map" class="farmers-map" frameborder="0" style="border:0" src=<%= "https://www.google.com/maps/embed/v1/place?key=AIzaSyCzueOTNlgqagtZxGARWKl3M28HRnn57Fs&q=#{escape_address(market.Address)}" %>></iframe>
        </div>
      </div>
    </div>
  </div>
<% end %>
