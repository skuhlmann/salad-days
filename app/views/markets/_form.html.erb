<%= form_for([:user, @market], html: {multipart: true}) do |f| %>
  <% if @market.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@market.errors.count, "error") %> prohibited this market from being saved:</h2>

      <ul>
      <% @market.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.label :products %><br>
    <%= f.text_field :products %>
  </div>
  <div>
    <%= f.label :street %><br>
    <%= f.text_field :street %>
  </div>
  <div>
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div>
  <div>
    <%= f.label :state %><br>
    <%= f.text_field :state %>
  </div>
  <div>
    <%= f.label :zip %><br>
    <%= f.text_field :zip %>
  </div>
  <p>
    <% if  @market.image.exists? %>
      <%= image_tag @market.image.url %><br />
    <% end %>
    <%= f.label :image, "Attach an Image" %><br />
    <%= f.file_field :image %>
  </p>

  <div>
    <%= f.submit %>
  </div>
<% end %>
