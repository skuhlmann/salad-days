<div class="column-group horizontal-gutters spacing">
  <% if user.market.blank? %>
    <div class="all-100">
      <p class="medium-content">You haven't opened a market yet.</p>
      <p><%= link_to "Create a Market", new_market_path(user.id), class: "listing-btn" %></p>
    </div>
  <% else %>
  <div class="all-100 align-center">
    <div id="user-market">

      <h3 class="align-right">Your Market:  <%= user.market.name.titleize %></h3>
      <div class="column-group horizontal-gutters">
        <div class="all-33">
          <i class="fa fa-leaf"></i>
          <p class="small">Image</p>
          <%= image_tag user.market.image.url(:thumb) %>
        </div>
        <div class="all-33">
          <i class="fa fa-leaf"></i>
          <p class="small">Address Info</p>
          <p class="medium-content"><%= user.market.full_address %></p>
          <p class="medium-content"><%= user.market.email %></p>
        </div>
        <div class="all-33">
          <i class="fa fa-leaf"></i>
          <p class="small">Featured Products</p>
          <p class="medium-content"><%= user.market.products %></p>
        </div>
      </div>
    </div>
    <%= link_to "Edit your market", edit_market_path(user.market.slug), class: "listing-btn"  %>
  </div>
  <% end %>
</div>


